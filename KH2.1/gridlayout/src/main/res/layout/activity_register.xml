<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/gridlayout"
    android:alignmentMode="alignBounds"
    android:columnCount="4"
    android:rowCount="6">
    <TextView
        android:id="@+id/text_name"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="1"
        android:gravity="center"
        android:text="姓名："
        android:textSize="20sp" />
    <EditText
        android:id="@+id/edit_name"
        android:ems="17"
        android:maxLines="1"
        android:hint="请填写联系人的姓名"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/text_phone_number"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:text="手机号码："
        android:textSize="20sp" />
    <EditText
        android:id="@+id/edit_phone_name"
        android:ems="17"
        android:maxLines="1"
        android:hint="请填写联系人的手机号码"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/text_email_box"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:text="电子邮箱："
        android:textSize="20sp" />
    <EditText
        android:id="@+id/edit_mail_box"
        android:ems="17"
        android:maxLines="1"
        android:hint="请填写联系人的电子邮箱"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/text_company"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:text="公司："
        android:textSize="20sp" />
    <EditText
        android:id="@+id/edit_company"
        android:ems="17"
        android:maxLines="1"
        android:hint="请填写联系人的公司"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/text_remark"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_gravity="fill"
        android:text="备注："
        android:textSize="20sp" />
    <EditText
        android:id="@+id/edit_remark"
        android:ems="17"
        android:maxLines="1"
        android:hint="请填写备注"
        android:textSize="15sp"/>


    <Button
        android:id="@+id/button_ensure"
        android:text="确定"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_gravity="fill"
        android:layout_margin="5dp"
        android:textColor="#fff"
        android:background="#26e9c8"
        android:textSize="20sp" />


</GridLayout>

